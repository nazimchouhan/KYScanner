<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Light_Cream"
    tools:context=".Events.Samwaad">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/EventToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/Light_Cream"
        android:title="SubEvent Page"
        android:titleTextColor="@color/dark_brown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/EventToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/Light_Cream"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="25dp">

            <Button
                android:id="@+id/Scripturesque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/editbox_background"
                android:backgroundTint="@color/Light_Cream"
                android:padding="10dp"
                android:text="Scripturesque"
                android:textSize="18sp" />

            <Button
                android:id="@+id/WhatsTheWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/editbox_background"
                android:backgroundTint="@color/Light_Cream"
                android:padding="10dp"
                android:text="Whats The Word"
                android:textSize="18sp" />

            <Button
                android:id="@+id/JustaMinute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/editbox_background"
                android:backgroundTint="@color/Light_Cream"
                android:padding="10dp"
                android:text="Just a Minute"
                android:textSize="18sp" />

            <Button
                android:id="@+id/INDIANHELMQUIZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/editbox_background"
                android:backgroundTint="@color/Light_Cream"
                android:padding="10dp"
                android:text="Indian Helm Quiz"
                android:textSize="18sp" />

            <Button
                android:id="@+id/HINDIDEBATE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/editbox_background"
                android:backgroundTint="@color/Light_Cream"
                android:padding="10dp"
                android:text="Hindi Debate"
                android:textSize="18sp" />
            <Button
                android:id="@+id/EnglishDebate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/editbox_background"
                android:backgroundTint="@color/Light_Cream"
                android:baselineAligned="false"
                android:padding="10dp"
                android:text="Battle front"
                android:textSize="18sp" />

            <Button
                android:id="@+id/HINDISTORYTELLING"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:background="@drawable/editbox_background"
                android:backgroundTint="@color/Light_Cream"
                android:padding="10dp"
                android:text="Hindi Story Telling"
                android:textSize="18sp" />

            <Button
                android:id="@+id/HINDIPOETRYSLAM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/editbox_background"
                android:backgroundTint="@color/Light_Cream"
                android:baselineAligned="false"
                android:padding="10dp"
                android:text="Hindi Poetry Slam"
                android:textSize="18sp" />
            <Button
                android:id="@+id/AJesterCourt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/editbox_background"
                android:backgroundTint="@color/Light_Cream"
                android:baselineAligned="false"
                android:padding="10dp"
                android:text="A Jester Court"
                android:textSize="18sp" />
            <Button
                android:id="@+id/Aashubhashad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/editbox_background"
                android:backgroundTint="@color/Light_Cream"
                android:baselineAligned="false"
                android:padding="10dp"
                android:text="Aashubhashad"
                android:textSize="18sp" />
            <Button
                android:id="@+id/Legendofsirspeakalot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/editbox_background"
                android:backgroundTint="@color/Light_Cream"
                android:baselineAligned="false"
                android:padding="10dp"
                android:text="Legend of sir speak a lot"
                android:textSize="18sp" />
            <Button
                android:id="@+id/Improvecomedy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/editbox_background"
                android:backgroundTint="@color/Light_Cream"
                android:baselineAligned="false"
                android:padding="10dp"
                android:text="Improve Comedy"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>